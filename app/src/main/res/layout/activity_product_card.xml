<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51555B"
    android:backgroundTint="#51555B"
    tools:context=".product_card">

    <!-- Нижний градиент (серый -> белый), виден через полупрозрачные подложки -->


    <!-- Гайдлайн: нижняя граница фото (60% экрана) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/photo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <!-- Фото (60% экрана) с перелистыванием -->


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pro_card_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/photo_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager2.widget.ViewPager2>

    <!-- Плавный переход от фото к тёмному блюру -->

    <!-- Индикаторы (полосочки) -->

    <LinearLayout
        android:id="@+id/photo_indicators"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-130dp"
        android:background="@drawable/overlay_round_top_clip"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_guideline">

        <!-- Реальный blur-фон (обновляется из кода) -->
        <ImageView
            android:id="@+id/overlay_blur_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Затемнение #131316 с прозрачностью 56% -->
        <View
            android:id="@+id/overlay_scrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#8F131316"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Элементы шапки размещены НА overlay (без отдельного окна photo_header) -->
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                android:tint="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/maps_button"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="18dp"
                android:background="@android:color/transparent"
                android:contentDescription="Открыть в картах"
                android:src="@drawable/ic_yandex_maps"
                android:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/rating_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/maps_button"
                app:layout_constraintEnd_toStartOf="@id/maps_button"
                app:layout_constraintTop_toTopOf="@id/maps_button">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    android:tint="#FFD700" />

                <TextView
                    android:id="@+id/rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/sfprodisplay1medium"
                    android:text="5.0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/sfprodisplay1medium"
                android:maxLines="1"
                android:text="Ресторан PANORAMA"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/back_btn"
                app:layout_constraintEnd_toStartOf="@id/rating_group"
                app:layout_constraintStart_toEndOf="@id/back_btn"
                app:layout_constraintTop_toTopOf="@id/back_btn" />

            <!-- Контент (скролл) -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/content_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="18dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@id/add_review_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_btn">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingBottom="16dp">

                    <!-- Описание (если нужно, можно скрыть/заменить) -->
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/sfprodisplay1medium"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:text="Описание места..." />

                    <!-- Инфо (people/calendar/geo) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/age_icon" />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/sfprodisplay1medium"
                            android:maxLines="1"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            tools:text="Нет ограничений по возрасту" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_date" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/sfprodisplay1medium"
                            android:maxLines="2"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            tools:text="пн-чт 06:30–23:00; пт 06:30–00:00; ..." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_geo" />

                        <TextView
                            android:id="@+id/place"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/sfprodisplay1medium"
                            android:maxLines="2"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            tools:text="Ижевск, ул. Милиционная, 5" />
                    </LinearLayout>

                    <!-- Отзывы -->
                    <TextView
                        android:id="@+id/reviews_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/sfprodisplay1medium"
                        android:text="Отзывы"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reviews_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_event_review" />

                    <!-- Отступ под кнопку -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Большая кнопка "Добавить отзыв" -->
            <TextView
                android:id="@+id/add_review_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/button_red_rounded"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/sfprodisplay1medium"
                android:gravity="center"
                android:text="Добавить отзыв"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>